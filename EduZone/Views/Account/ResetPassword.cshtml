@model EduZone.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    body {
        font-family: "Montserrat", sans-serif;
        background-image: url(/Images/banner4-cssxk4.jpg);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgb(52 129 64 / 60%);
    }
</style>
<div class="overlay">
    <div class=" card text-center w-50 align-content-center" style=" font-family: 'Signika', sans-serif;margin-top:15vh;margin-left:25%">
        <div class="card-header h5 text-white" style="background-color: rgb(52 129 64 / 60%);"> Password Reset</div>

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal p-3", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-floating mb-3">

                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <label for="Email">Email</label>
            </div>
            <div class="form-floating mb-3">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <label for="Password">Password</label>
            </div>
            <div class="form-floating mb-3">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                <label for="ConfirmPassword">Confirm Password</label>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 ms-5">
                    <input type="submit" class="btn w-50 fw-bold " value="Reset" style="background-color: rgb(52 129 64 / 60%);"/>
                </div>
            </div>
        }

    </div>
</div>



    @Scripts.Render("~/bundles/jqueryval")
