@using EduZone.Models.ViewModels
@model ChanageEmail
@{
    ViewBag.Title = "ChanageEmail";
}




<div class="tab-pane fade show active">
    @using (Html.BeginForm(new { num = 1 }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Chanage Email</h3>
        <hr class="mb-5" />

        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" required value="@Model.Email" name="Email" readonly>
                </div>
            </div>
            <br>
            @if (ViewBag.ShowCode == true)
            {
                <div class="col-md-10">
                    <div class="form-group">
                        <label>New Email</label>
                        <input type="text" class="form-control" required value="@Model.NewEmail" name="NewEmail" readonly>
                        @Html.ValidationMessageFor(m => m.NewEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-10">
                    <div class="form-group">
                        <label>New Email</label>
                        <input type="text" class="form-control" required value="@Model.NewEmail" name="NewEmail">
                        @Html.ValidationMessageFor(m => m.NewEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
            }

            @if (ViewBag.ShowCode == null)
            {
                <input type="submit" value="Confirmation Email" class="btn btn-success w-25" formaction="@Url.Action("ChanageEmail","Profile",new { num=1})" />
            }
            @if (ViewBag.ShowCode == true)
            {
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Confirmation Code</label>
                        <input type="text" class="form-control" required value="@Model.code" name="code">
                    </div>
                </div>
                <input type="submit" value="Chanage Email" class="btn btn-success w-25"  formaction="@Url.Action("ChanageEmail","Profile",new { num=2})" />
            }
        </div>
    }

    
</div>
@section bottom_Link{
    <script>
        var item = document.getElementsByClassName("item5");
        console.log(item[0]);
        item[0].classList.add("active");
    </script>
}