    <script>
          let prox2 = '';
        $(function () {

            console.log("functoin Onload");

            var con = $.hubConnection();

            prox2 = con.createHubProxy("OnlineUserHub");

            con.start();

            prox2.on("onlineUser", function (connectedid) {
                var userid = '@User.Identity.GetUserId()';
                prox2.invoke("setOnlineUser", userid);
            })
        })

