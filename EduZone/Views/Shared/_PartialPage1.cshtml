
@using EduZone.Models.ViewModels;
@model BasicInfo

@using (Html.BeginForm("p1", "Student", FormMethod.Post))
{

    <h3 class="mb-4">Account Settings</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" required value="@Model.Address" name="Name">
                @Html.ValidationMessageFor(e => e.Address, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>National ID</label>
                <input type="text" class="form-control" required value="@Model.NationalID" name="NationalID">
                @Html.ValidationMessageFor(e => e.NationalID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" required value="@Model.Email" name="Email">
                @Html.ValidationMessageFor(e => e.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}