@using EduZone.Models
@model List<ApplicationUser>
@{
    ViewBag.Title = "GetBatches";
    string vx;
}

@using(Html.BeginForm()){
<div class="d-flex mt-3">
    <select class="form-select w-25 " id="Sector" name="BN">
        <option selected hidden>Choose Course</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
    </select>
    <input type="submit" value="Show" class="btn btn-outline-secondary">
</div>
}
<div class="d-flex flex-row flex-wrap">
    @if (Model.Count!=0)
    {
        foreach (var item in Model)
        {
            if (item == null)
            {
                continue;
            }
            <div class="card m-3 ">
                <div class="card-body p-4 d-flex flex-column justify-content-center align-items-center">
                    <img src="~/Images/@item.Image" width="150px" height="150px" class="photo-profile" alt="...">
                    <h6 class="card-title my-2">
                        <a href="/Profile/ShowProfile/@item.Id"><span class="badge rounded-pill text-bg-info">@item.Name</span></a>
                    </h6>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <a href="/Profile/ShowProfile/@item.Id" class="btn btn-sm btn-outline-danger w-100"> Details </a>
                </div>
            </div>
        }
    }
</div>
@if (ViewBag.BN != 0)
{
    @section bottom_Link{
        <script>
            onload = function () {
                var x = document.getElementById("Sector");
                x.value = @ViewBag.BN;
            }
        </script>
    }
}